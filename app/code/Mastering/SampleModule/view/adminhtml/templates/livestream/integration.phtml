    function drawCountryRevenueChart() {
        var data = google.visualization.arrayToDataTable([
            ['Country', 'Revenue'],
            <?php
            $revenueByCountry = json_decode($block->getRevenueByCountryData(), true);
            foreach ($revenueByCountry as $data) {
                echo "['" . $block->escapeHtml($data['country_name']) . "', " . floatval($data['revenue_amount']) . "],";
            }
            ?>
        ]);

        var options = {
            chartArea: {width: '70%', height: '80%'},
            hAxis: {
                title: 'Revenue',
                minValue: 0,
                textStyle: {color: '#7f8c8d'},
                titleTextStyle: {color: '#7f8c8d'},
                format: 'currency'
            },
            vAxis: {
                title: 'Country',
                textStyle: {color: '#7f8c8d'},
                titleTextStyle: {color: '#7f8c8d'}
            },
            legend: {position: 'none'},
            colors: ['#3498db'],
            backgroundColor: { fill:'transparent' }
        };

        var chart = new google.visualization.BarChart(document.getElementById('countryRevenueChart'));
        chart.draw(data, options);
    }

