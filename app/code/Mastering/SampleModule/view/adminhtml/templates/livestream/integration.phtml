            hAxis: {
                title: 'Date',
                textStyle: {color: '#7f8c8d'},
                titleTextStyle: {color: '#7f8c8d'}
            },
            vAxis: {
                title: 'Revenue',
                textStyle: {color: '#7f8c8d'},
                titleTextStyle: {color: '#7f8c8d'},
                format: 'currency'
            }
        };
        var chart = new google.visualization.LineChart(document.getElementById('revenueChart'));
        chart.draw(data, options);
    }

    function drawRefundChart() {
        var data = google.visualization.arrayToDataTable(<?= $block->getRefundChartData() ?>);
        var options = {
            legend: { position: 'bottom' },
            colors: ['#e74c3c'],
            backgroundColor: { fill:'transparent' },
            chartArea: {width: '80%', height: '70%'},
            hAxis: {
                title: 'Date',
                textStyle: {color: '#7f8c8d'},
                titleTextStyle: {color: '#7f8c8d'}
            },
            vAxis: {
                title: 'Refund Amount',
                textStyle: {color: '#7f8c8d'},
                titleTextStyle: {color: '#7f8c8d'},
                format: 'currency'
            },
            areaOpacity: 0.3,
            isStacked: true
        };
        var chart = new google.visualization.AreaChart(document.getElementById('refundChart'));
        chart.draw(data, options);
    }

    function drawOrderChart() {
        var data = google.visualization.arrayToDataTable(<?= $block->getOrderChartData() ?>);
        var options = {
            curveType: 'function',
            legend: { position: 'bottom' },
